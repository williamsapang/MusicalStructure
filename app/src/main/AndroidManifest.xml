<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samsophias.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Library">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Albums"
            android:label="Albums"/>
        <activity
            android:name=".MusicStore"
            android:label="Music Store"/>
        <activity
            android:name=".NowIsPlaying"
            android:label="Now is playing"/>
        <activity
            android:name=".Settings"
            android:label="Settings"/>
        <activity
            android:name=".ArtistsActivity"
            android:label="Artists"/>

    </application>

</manifest>